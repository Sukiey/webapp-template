{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "outDir": "../build",    
  },
  "exclude": ["node_modules", "./config/*", "**/*.spec.ts"]
}